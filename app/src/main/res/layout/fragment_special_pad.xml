        app:layout_constraintVertical_weight="16.67" />

    <Button
        android:id="@+id/btn_special_rad_deg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:insetLeft="0.5dp"
        android:insetTop="0.5dp"
        android:insetRight="0dp"
        android:insetBottom="0.5dp"
        android:text="@string/Rad"
        app:cornerRadius="-100dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_x_power_y"
        app:layout_constraintEnd_toStartOf="@+id/btn_special_equals"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintHorizontal_weight="25"
        app:layout_constraintStart_toEndOf="@+id/btn_e_power_x"
        app:layout_constraintTop_toBottomOf="@+id/btn_special_to_trig"
        app:layout_constraintVertical_chainStyle="spread"
        app:layout_constraintVertical_weight="16.67" />

    <Button
        android:id="@+id/btn_e"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fontFamily="sans-serif-medium"
        android:insetLeft="0dp"
        android:insetTop="0.5dp"
        android:insetRight="0.5dp"
        android:insetBottom="0.5dp"
        android:text="@string/e"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="18sp"
        app:cornerRadius="-100dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_x_power_3"
        app:layout_constraintEnd_toStartOf="@+id/btn_e_power_x"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintHorizontal_weight="25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_special_to_main"
        app:layout_constraintVertical_chainStyle="spread"
        app:layout_constraintVertical_weight="16.67" />

    <Button
        android:id="@+id/btn_pi"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:insetLeft="0.5dp"
        android:insetTop="0.5dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        android:text="@string/pi"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="18sp"
        app:cornerRadius="-100dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_nothing"
        app:layout_constraintEnd_toStartOf="@+id/btn_special_equals"
