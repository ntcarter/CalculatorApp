        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintHorizontal_weight="25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_x_power_3"
        app:layout_constraintVertical_chainStyle="spread"
        app:layout_constraintVertical_weight="16.67" />

    <Button
        android:id="@+id/btn_2_power_x"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:insetLeft="0.5dp"
        android:insetTop="0.5dp"
        android:insetRight="0.5dp"
        android:insetBottom="0.5dp"
        android:text="@string/_2_x"
        app:cornerRadius="-100dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_factorial"
        app:layout_constraintEnd_toStartOf="@+id/btn_x_power_neg_one"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintHorizontal_weight="25"
        app:layout_constraintStart_toEndOf="@+id/btn_10_power_x"
        app:layout_constraintTop_toBottomOf="@+id/btn_x_power_2"
