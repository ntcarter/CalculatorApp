        android:insetTop="0.5dp"
        android:insetRight="0dp"
        android:insetBottom="0.5dp"
        android:text="@string/pow_neg_one"
        app:cornerRadius="-100dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_pi"
        app:layout_constraintEnd_toStartOf="@+id/btn_special_equals"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintHorizontal_weight="25"
        app:layout_constraintStart_toEndOf="@+id/btn_2_power_x"
        app:layout_constraintTop_toBottomOf="@+id/btn_x_power_y"
        app:layout_constraintVertical_chainStyle="spread"
        app:layout_constraintVertical_weight="16.67" />

    <Button
        android:id="@+id/btn_square_root"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:insetLeft="0dp"
        android:insetTop="0.5dp"
        android:insetRight="0.5dp"
        android:insetBottom="0.5dp"
        android:text="@string/root"
        app:cornerRadius="-100dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_nothing"
        app:layout_constraintEnd_toStartOf="@+id/btn_factorial"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintHorizontal_weight="25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_10_power_x"
        app:layout_constraintVertical_chainStyle="spread"
        app:layout_constraintVertical_weight="16.67" />

    <Button
        android:id="@+id/btn_x_power_3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:insetLeft="0dp"
        android:insetTop="0.5dp"
        android:insetRight="0.5dp"
        android:insetBottom="0.5dp"
        android:text="@string/pow_3"
        app:cornerRadius="-100dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_10_power_x"
        app:layout_constraintEnd_toStartOf="@+id/btn_x_power_2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintHorizontal_weight="25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_e"
        app:layout_constraintVertical_chainStyle="spread"
        app:layout_constraintVertical_weight="16.67" />

    <Button
        android:id="@+id/btn_factorial"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:insetLeft="0dp"
        android:insetTop="0.5dp"
        android:insetRight="0.5dp"
        android:insetBottom="0dp"
        android:text="@string/factorial"
        app:cornerRadius="-100dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_nothing"
        app:layout_constraintEnd_toStartOf="@+id/btn_pi"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintHorizontal_weight="25"
        app:layout_constraintStart_toEndOf="@+id/btn_square_root"
        app:layout_constraintTop_toBottomOf="@+id/btn_2_power_x"
        app:layout_constraintVertical_chainStyle="spread"
        app:layout_constraintVertical_weight="16.67" />

    <Button
