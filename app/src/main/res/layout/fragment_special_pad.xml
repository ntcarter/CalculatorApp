        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintHorizontal_weight="25"
        app:layout_constraintStart_toEndOf="@+id/btn_factorial"
        app:layout_constraintTop_toBottomOf="@+id/btn_x_power_neg_one"
        app:layout_constraintVertical_chainStyle="spread"
        app:layout_constraintVertical_weight="16.67" />

    <Button
        android:id="@+id/btn_e_power_x"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:insetLeft="0.5dp"
